@page
@model FileManager.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "ResetPasswordConfirmation";
    Layout = "_Layout";
}

<h2>ResetPasswordConfirmation</h2>

<h4>Reset your password.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ResetPasswordConfirmationViewModel.UserId" value="@Model.userId" />
            <input type="hidden" asp-for="ResetPasswordConfirmationViewModel.ResetPasswordConfirmationToken"
                     value="@Model.resetPasswordConfirmationToken" />
            <div class="form-group">
                <label asp-for="ResetPasswordConfirmationViewModel.Password"></label>
                <input asp-for="ResetPasswordConfirmationViewModel.Password" class="form-control" />
                <span asp-validation-for="ResetPasswordConfirmationViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResetPasswordConfirmationViewModel.ConfirmPassword"></label>
                <input asp-for="ResetPasswordConfirmationViewModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="ResetPasswordConfirmationViewModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
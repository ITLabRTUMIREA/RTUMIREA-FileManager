@page
@model FileManager.Pages.Account.Roles.UserListModel
@{
    ViewData["Title"] = "UserList";
}

<h2>Список пользователей</h2>
<table class="table table-bordered">
    @foreach (var user in @Model.Users)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-page="EditUserDepartmentRoles" asp-route-userid="@user.Id">Права доступа на кафедрах</a>
            </td>
        </tr>
    }
</table>
<a asp-page="./Index">Вернуться назад</a>


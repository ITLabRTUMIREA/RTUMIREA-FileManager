@page
@model FileManager.Pages.Account.Departments.DepartmentsListModel
@{
    ViewData["Title"] = "Список кафедр";
}

<h2>Список кафедр</h2>
<table class="table">
    @foreach (var department in @Model.Departments)
    {
        <tr>
            <td>@department.Name</td>
            <td>
                <form method="post">
                    <button type="submit" asp-page-handler="Delete" asp-route-id="@department.ID" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-page="CreateDepartment">Добавить кафедру</a>
<a asp-page="UserDepartmentList">Список пользователей</a>


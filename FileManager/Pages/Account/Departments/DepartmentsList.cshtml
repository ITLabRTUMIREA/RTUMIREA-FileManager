@page
@model FileManager.Pages.Account.Departments.DepartmentsListModel
@{
    ViewData["Title"] = "Список кафедр";
}

<h2>Список кафедр</h2>
<table class="table">
    @foreach (var role in @Model.Roles)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-page="CreateDepartment">Добавить кафедру</a>
<a asp-page="UserDepartmentList">Список пользователей</a>

